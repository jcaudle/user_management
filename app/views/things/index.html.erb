<h1>Things</h1>

<table class="table table-hover">
  <colgroup span="4">
    <col>
    <col span="3" style="width: 5%; text-align: center;">
  </colgroup>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3" class="action">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.name %></td>
        <td class="action"><%= link_to 'Show', thing %></td>
        <td class="action"><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td class="action"><%= link_to 'Destroy', thing, method: :delete, data: { confirm: "Are you sure you want to destroy #{thing.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thing', new_thing_path %>
